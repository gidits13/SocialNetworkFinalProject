@using Microsoft.AspNetCore.Identity;
@using SocialNetworkFinalProject.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;

@model SocialNetworkFinalProject.ViewModels.MainViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (SignInManager.IsSignedIn(User))
{
    <meta http-equiv="refresh" content="0;URL=https://localhost:5001/MyPage" />
}
else
{


    <div class="row">
        <div class="side">
            <div class="center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
            </div>
            <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />
        </div>


        <div class="main">
            <partial name="Login" model="Model.LoginView" />
            <partial name="Register" model="Model.RegisterView" />
        </div>

    </div>

}
